<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.farmerapp.Fragments.MainFragments.PaymentFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_no_payment"
            android:textSize="16sp"
            android:id="@+id/no_requests"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/pay_settings"
            android:textColor="@color/white"
            android:paddingHorizontal="40dp"
            android:paddingVertical="5dp"
            android:background="@drawable/pay_settings_back"/>
    </RelativeLayout>
</FrameLayout>