<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farmerapp.Fragments.RegPhoto">


    <RelativeLayout
        android:layout_width="309dp"
        android:layout_height="364dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="293dp"
        android:background="@drawable/reglayout">

        <ImageView
            android:layout_width="309dp"
            android:layout_height="63dp"
            android:background="@drawable/reg_gradient" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="15dp"
            android:text="Address"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="273.4dp"
            android:layout_marginBottom="323.5dp"
            android:background="@drawable/baseline_keyboard_backspace_white_18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="82dp"
            android:layout_marginRight="92.2dp"
            android:layout_marginBottom="260dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/location"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="14.3dp"
                android:background="@drawable/baseline_location_on_black_18dp"/>

            <TextView
                android:layout_width="102dp"
                android:layout_height="22dp"
                android:text="Your Location"
                android:textColor="#0eb095"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            style="PierSans-Light"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109dp"
            android:layout_marginBottom="135dp"
            android:text="Or"
            android:textColor="#a3a3a3"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/Add1"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="185dp"
            android:background="@drawable/reglayout"
            android:gravity="center"
            android:hint="Address Line 1"
            android:textColorHint="#c7c7c7" />

        <EditText
            android:id="@+id/Place"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="190dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="135dp"
            android:background="@drawable/reglayout"
            android:gravity="center"
            android:hint="Place"
            android:textColorHint="#c7c7c7" />

        <EditText
            android:id="@+id/Landmark"
            android:layout_width="256dp"
            android:layout_height="48dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/reglayout"
            android:gravity="center"
            android:hint="Landmark (Optional)"
            android:textColorHint="#c7c7c7" />

        <Button
            android:id="@+id/next"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="296dp"
            android:layout_marginRight="95dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundbutton"
            android:text="Next"
            android:textColor="#ffffff" />


    </RelativeLayout>


</FrameLayout>
