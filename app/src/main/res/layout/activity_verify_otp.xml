<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/verify_otp_parent"
    tools:context="com.farmerapp.Activities.VerifyOTPActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_title_part_1"
            android:textColor="@color/colorPrimary"
            android:textSize="50dp"
            android:shadowColor="#29000000"
            android:shadowDy="3"
            android:shadowRadius="6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_title_part_2"
            android:textColor="@color/grey"
            android:textSize="50dp"
            android:shadowColor="#29000000"
            android:shadowDy="3"
            android:shadowRadius="6"/>
    </LinearLayout>

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_2"
        android:enabled="false"
        android:alpha="0.3"
        android:paddingHorizontal="10dp"
        android:textAllCaps="false"
        android:text="@string/otp_verify"
        android:onClick="verify"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_timer"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/otp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.77"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_ll"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_resend"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="resendOTP"
        android:enabled="false"
        android:alpha="0.2"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_ll"
        app:layout_constraintVertical_bias="0.0" />
   <LinearLayout
        android:id="@+id/otp_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner"
        app:layout_constraintVertical_bias="0.0">
        <EditText
            android:id="@+id/otp1"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:maxLength="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="@drawable/back_3"
            android:inputType="phone"
            android:paddingHorizontal="15dp" />
        <EditText
            android:id="@+id/otp2"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:maxLength="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="@drawable/back_3"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="15dp" />
        <EditText
            android:id="@+id/otp3"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:background="@drawable/back_3"
            android:maxLength="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="15dp" />
        <EditText
            android:id="@+id/otp4"
            android:layout_width="42dp"
            android:layout_height="54dp"
            android:background="@drawable/back_3"
            android:maxLength="1"
            android:textColor="#000000"
            android:textAlignment="center"
            android:inputType="phone"
            android:layout_marginLeft="10dp"
            android:paddingHorizontal="15dp" />
       <EditText
           android:id="@+id/otp5"
           android:layout_width="42dp"
           android:layout_height="54dp"
           android:background="@drawable/back_3"
           android:maxLength="1"
           android:textColor="#000000"
           android:textAlignment="center"
           android:inputType="phone"
           android:layout_marginLeft="10dp"
           android:paddingHorizontal="15dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:src="@drawable/union_cropped"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>